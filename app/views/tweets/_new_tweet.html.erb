<%= form_with(model: @tweet, method: 'post', local: true) do |form| %>
  <% if @tweet.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-warning" role="alert">
      <h6><%= pluralize(@tweet.errors.count, "error") %> prohibited this user from being saved:</h6>

      <ul>
      <% @tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
      </div>
    </div>
  <% end %>
  <%= form.hidden_field :author_id, value: current_user.id %>
  <div class="input-group">
    <%= form.text_area(:text, rows: 2, class: "form-control", maxlength: "250", value: "#{@value}" ) %>
    <div class="input-group-append">
      <%= form.submit 'Publish', class: 'btn btn-outline-secondary', id: 'button-addon2' %>
    </div>
  </div>
<% end %>
<small id="info-tweet"></small>